{
    order csp before file_server
}

:8080 {
  root * ./app
  file_server
  encode zstd gzip
@brotli {
    file {path}.br
}
header Server Seva
header / {
     Server appointy-seva
     Strict-Transport-Security max-age=2592000;
     X-Content-Type-Options nosniff
     X-Frame-Options SAMEORIGIN
     Referrer-Policy strict-origin
     X-XSS-Protection "1; mode=block"
 }

 csp / {
     template "default-src: none {nonce}"
 }
}